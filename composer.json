{
    "name": "niiknow/email-bouncer-api",
    "description": "Email bounce",
    "keywords": ["framework", "fatfree", "email", "bounce"],
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "bcosca/fatfree": "^3.6.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.12",
        "phpunit/phpunit": "^8.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcs:fix": "phpcbf -w",
        "app:clear": [
            "rm -rf ./storage/build",
            "mkdir -p ./storage/build",
            "rm -f ./storage/cache/*.*",
            "rm -f ./public/tmp/cache/*.*",
            "rm -f ./storage/data/*.sqli*",
            "composer dump-autoload"
        ],
        "app:package": [
            "composer app:clear",
            "composer update",
            "COPYFILE_DISABLE=1 tar -X './.packageignore' -zcvf ./storage/build/dist.tar.gz ./"
        ],
        "app:production": [
            "composer app:clear",
            "echo 'composer install --no-dev --optimize-autoloader'"
        ],
        "docker:clear": [
            "rm -rf .docker/data/mysql/*",
            "rm -rf .docker/logs/*"
        ]
    }
}
