root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[{package.json,.babelrc}]
indent_style = space
indent_size = 2

[*.{js,scss,vue,yml}]
indent_style = space
indent_size = 2

[*.{php,json,conf}]
indent_style = space
indent_size = 4
